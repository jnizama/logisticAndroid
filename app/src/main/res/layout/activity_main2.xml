<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/com"
    android:orientation="vertical"
    tools:context="com.example.ronald.logistica.Main2Activity">

  <LinearLayout
      android:id="@+id/linearLayout"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content">
  </LinearLayout>

  <TextView
      android:id="@+id/Sistema_de_Logistica"
      android:layout_width="185dp"
      android:layout_height="100dp"
      android:layout_marginTop="21dp"
      android:gravity="center"
      android:text="SISTEMA LOGISTICO"
      android:textColor="#0E8AEE"
      android:textSize="19sp"
      android:layout_below="@+id/linearLayout"
      android:layout_alignRight="@+id/buttonCancelar"
      android:layout_alignEnd="@+id/buttonCancelar" />

  <LinearLayout
      android:layout_width="wrap_content"
      android:layout_height="wrap_content">
    </LinearLayout>

  <Button
      android:id="@+id/buttonCancelar"
      android:layout_width="161dp"
      android:layout_height="wrap_content"
      android:layout_alignLeft="@+id/buttonAlmacen"
      android:layout_alignStart="@+id/buttonAlmacen"
      android:layout_below="@+id/Sistema_de_Logistica"
      android:layout_marginTop="25dp"
      android:drawableLeft="@drawable/compra"
      android:gravity="center_vertical"
      android:onClick="onClick"
      android:text="Compras"
      android:textSize="17sp" />

  <LinearLayout
      android:layout_width="wrap_content"
      android:layout_height="wrap_content">
    </LinearLayout>

  <requestFocus />

  <Button
      android:id="@+id/buttonOrdenCompra"
      android:layout_width="165dp"
      android:layout_height="wrap_content"
      android:layout_centerVertical="true"
      android:layout_marginLeft="25dp"
      android:layout_marginStart="25dp"
      android:drawableLeft="@drawable/ordencompra"
      android:onClick="onClick"
      android:text="Orden de Compra" />

  <Button
      android:id="@+id/buttonGuardar"
      android:layout_width="165dp"
      android:layout_height="wrap_content"
      android:layout_alignBottom="@+id/buttonOrdenCompra"
      android:layout_toEndOf="@+id/buttonOrdenCompra"
      android:layout_toRightOf="@+id/buttonOrdenCompra"
      android:drawableLeft="@drawable/inventario"
      android:onClick="onClick"
      android:text="Inventario" />

  <LinearLayout
      android:layout_width="wrap_content"
      android:layout_height="wrap_content">
    </LinearLayout>

  <Button
      android:id="@+id/buttonAlmacen"
      android:layout_width="161dp"
      android:layout_height="wrap_content"
      android:layout_below="@+id/buttonOrdenCompra"
      android:layout_centerHorizontal="true"
      android:layout_gravity="center_horizontal"
      android:layout_marginTop="33dp"
      android:drawableLeft="@drawable/almacen"
      android:gravity="center_vertical"
      android:onClick="onClick"
      android:text="Almacen" />
</RelativeLayout>











